<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Collect</title>
    <link rel="Page Icon" type="image/jpg" href="MovieFavicon.jpg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <!--Nav Bar (on top)-->
        <div class="bg-dark text-white p-2">
            <div class="container-fluid">
                <div class="row">
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Podcast">Podcast</a>
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="FilmList">Film List</a>
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="EnterFilm">Suggest Film</a>
                </div>
            </div>
        </div>
    </header>
    <br />
    <h1 class="text-lg-center">@ViewData["Title"]</h1>
    <br /><br /><br />
    @RenderBody()
    <footer class="footer bg-dark">
        <div class="container">
            <span class="text-white-50">Barty INC &copy; 2020</span>
        </div>
    </footer>

</body>
</html>
