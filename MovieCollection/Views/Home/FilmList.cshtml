@{
    ViewData["Title"] = "Film List";
}

@model IEnumerable<MovieCollection.Models.Movie>
    <div class="container">
        <div class="row">
            <div class="col">
            </div>
            <div class="col-10">
                <br />

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Title</th>
                            <th>Year</th>
                            <th>Rating</th>
                            <th>Edited</th>
                            <th>Lent To</th>
                            <th>Notes</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (MovieCollection.Models.Movie x in Model)
                        {
                            <tr>
                                <td>@x.Category</td>
                                <td>@x.Title</td>
                                <td>@x.Year</td>
                                <td>@x.Rating</td>
                                <td>@x.Edited</td>
                                <td>@x.Lent_to</td>
                                <td>@x.Notes</td>
                                <td class="text-center">
                                    <!-- This is for the remove button -->
                                    <form method="post">
                                        <input type="hidden" name="MovieId"
                                               value="@x.MovieId" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Category" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Title" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Rating" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Edited" />
                                        <input type="hidden" name="FormType"
                                               value="edit" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Lent_to" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Notes" />
                                        <input type="hidden" name="FormType"
                                               value="delete" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                                <td class="text-center">
                                    <!-- Edit the Movie Info -->
                                    <form method="post">
                                        <input type="hidden" name="MovieId"
                                               value="@x.MovieId" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Category" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Title" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Rating" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Edited" />
                                        <input type="hidden" name="FormType"
                                               value="edit" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Lent_to" />
                                        <input type="hidden" name="MovieId"
                                               value="@x.Notes" />
                                        <button type="submit" class="btn btn-sm btn-dark">
                                            Edit
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
